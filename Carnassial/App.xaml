<carnassial:LocalizedApplication x:Class="Carnassial.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:carnassial="clr-namespace:Carnassial"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="CarnassialWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CarnassialWindowStyle.xaml" />
                <ResourceDictionary Source="Properties/SharedResources.xaml" />
                <ResourceDictionary Source="Properties/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</carnassial:LocalizedApplication>
