<Window x:Class="Carnassial.Dialog.DateDaylightSavingsTimeCorrection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Carnassial.Controls"
        Title="Date/time - Correct for changes to or from daylight savings time." 
		Name="DaylightSavingsTimeCorrection"
		MinHeight="826" MinWidth="768"
		Height="856" Width="768"
		ResizeMode="CanResizeWithGrip"
		ShowInTaskbar="False"
		WindowStartupLocation="CenterOwner" BorderBrush="Black" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:StockMessageControl x:Name="Message"
                            StatusImage="Question"
                            Title="Correct for Standard and Daylight Savings Time changes"
                            Problem="The camera did not account for daylight savings or standard time changes, which means some images or videos are off by an hour."
                            Solution="1. IMPORTANT.The image or video below should be where the time change occurred. &#10;    If it isn't, click Cancel, navigate to that file in the main window, then come back here.&#10;2. Correct the time + / - one hour in the Time Correction checkbox.&#10;3. Use the Propagate Correction checkbox to propagate changes forwards or backwards from this point.&#10;4. The Okay button will be selectable once you've done the above. Click Okay to confirm, Cancel to abort."
                            Result="The dates and times will be adjusted forwards or backwards from this file by +/- one hour (except corrupted ones)."
                            HideExplanationCheckboxIsVisible="True" Grid.Row="0" />
        <Rectangle Fill="#FF868686" Height="1" Grid.Row="1" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                <Label Content="File:" HorizontalContentAlignment="Left" FontWeight="Bold" VerticalAlignment="Top" />
                <Label Content="[ --- file name --- ]" HorizontalContentAlignment="Left" FontWeight="Normal" Name="FileName" VerticalAlignment="Top" />
            </StackPanel>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Content="Original date/time:" HorizontalContentAlignment="Right" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />
                <Label Name="OriginalDate" Content="yyyy-MMM-dd HH:mm.ss" FontWeight="Normal" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" />
                <Label Content="New date/time:" HorizontalContentAlignment="Right" FontWeight="Bold" Grid.Row="1" Grid.Column="0" />
                <Label Name="NewDate" Content="yyyy-MMM-dd HH:mm.ss" FontWeight="Normal" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" />
            </Grid>
            <GroupBox Header="Time change" FontWeight="Bold" Grid.Column="2" Grid.Row="0" Margin="10,0,2,0">
                <StackPanel>
                    <RadioButton Name="AddHour" Content="_Add an hour" GroupName="Hour" Checked="RadioButton_Checked" Margin="2,4,2,1" FontWeight="Normal" />
                    <RadioButton Name="SubtractHour" Content="_Subtract an hour" GroupName="Hour" Checked="RadioButton_Checked" Margin="2,2,2,0" FontWeight="Normal" />
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Apply change" FontWeight="Bold" Grid.Column="3" Grid.Row="0" Margin="2,0,5,0">
                <StackPanel>
                    <RadioButton Name="PropagateForward" Content="_Forward" GroupName="Propagate" Checked="RadioButton_Checked" Margin="2,4,2,1" FontWeight="Normal" />
                    <RadioButton Name="PropagateBackwards" Content="_Backwards" GroupName="Propagate" Checked="RadioButton_Checked" Margin="2,2,2,0" FontWeight="Normal" />
                </StackPanel>
            </GroupBox>
        </Grid>
        <Image Name="Image" MinHeight="100" MinWidth="100" Stretch="Uniform" StretchDirection="Both" Grid.Row="3" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4">
            <Button Name="OkButton" IsDefault="True" AutomationProperties.AutomationId="OkButton" Padding="10" Margin="10,10,10,10" Click="OkButton_Click" IsEnabled="False">_Okay</Button>
            <Button Name="CancelButton" IsCancel="True" Padding="10" Margin="10,10,10,10" Click="CancelButton_Click">_Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
