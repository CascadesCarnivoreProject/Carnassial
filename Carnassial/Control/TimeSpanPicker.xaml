<UserControl x:Class="Carnassial.Control.TimeSpanPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="TimeSpanDisplay" Text="hh:mm:ss" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0" />
        <Image Name="ErrorIcon" Source="/Resources/StatusCriticalError_16x.png" Margin="1,0,0,0" Stretch="None" Grid.Row="0" Grid.Column="1" Panel.ZIndex="1" Visibility="Collapsed" />
    </Grid>
</UserControl>